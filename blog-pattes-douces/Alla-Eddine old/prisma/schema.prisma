// learn more about it in the docs: https://pris.ly/d/prisma-schema
 
generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
 
model User {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  pseudo  String @unique
  bio String  
  mail  String @unique
  password String
 
  aricles Article[]

}
 
model Article{
  id String   @id @default(auto()) @map("_id") @db.ObjectId 
  type String
  titre String
  texte String
  date_publication DateTime @default(now())

  auteur User @relation(fields: [auteurId], references: [id])
  auteurId  String @db.ObjectId

  commentaires Commentaire[]
 
  
}
 
model Commentaire{
  id String   @id @default(auto()) @map("_id") @db.ObjectId
  texte String
 
 commentataire Article @relation(fields: [commentataireId],references: [id])
 commentataireId String @db.ObjectId
}
 
enum Reactions{
  Like
  Dislike
}